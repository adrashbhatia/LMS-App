<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".upload_matrial_teacher">

    <EditText
        android:id="@+id/material_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Material Description"
        android:inputType="text"
        android:padding="8dp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/material_link_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Material Link"
        android:inputType="textUri"
        android:padding="8dp"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_material_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/greenbuttongradieant"
        android:text="Save Material"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/materialsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"/>
</LinearLayout>
